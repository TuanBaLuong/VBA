Option Explicit

'HocExcel.Online
'Tính ngày cuối Tháng  =calEDATE("01/25/2019") => KQ: 01/31/2019
'Tính ngày cuối Quý =calEDATE("01/25/2019",0) => KQ: 03/31/2019

Function calEDATE(dteDate As Date, Optional blnQuy As Boolean = False) As Double
    Dim dtrResult As Date
    If blnQuy Then
        dtrResult = DateSerial(Year(dteDate), Int((Month(dteDate) - 1) / 3) * 3 + 4, 0)
    Else
        dtrResult = DateSerial(Year(dteDate), Month(dteDate) + 1, 0)
    End If
    calEDate = dtrResult
End Function

Function NgayCT(Thang As Integer, Nam As Integer, Optional Quy As Boolean = False)
    Dim XMONTH, XYEAR, XDAY
    XMONTH = Thang
    XYEAR = Nam
    XMONTH = XMONTH + 12 * Application.WorksheetFunction.Floor(-(XMONTH - 12) / 12, 1)
    XYEAR = XYEAR + Application.WorksheetFunction.Floor(-(XMONTH - 12) / 12, 1)
    If (Quy = False) Then
        If XMONTH = 1 Or XMONTH = 3 Or XMONTH = 5 Or XMONTH = 7 Or XMONTH = 8 Or XMONTH = 10 Or XMONTH = 12 Then XDAY = 31
        If XMONTH = 4 Or XMONTH = 6 Or XMONTH = 9 Or XMONTH = 11 Then XDAY = 30
        If XMONTH = 2 Then
        If XYEAR Mod 4 = 0 Then
        XDAY = 29
        Else: XDAY = 28
        End If
        End If
    Else
       If XMONTH = 1 Then
            XMONTH = 3
            XDAY = 31
        ElseIf XMONTH = 2 Then
            XMONTH = 6
            XDAY = 30
        ElseIf XMONTH = 3 Then
            XMONTH = 9
            XDAY = 30
        Else
            XMONTH = 12
            XDAY = 31
        End If
    End If
    If XMONTH < 10 Then
        NgayCT = Application.WorksheetFunction.Text(XDAY & "/" & "0" & XMONTH & "/" & XYEAR, "dd/mm/yyyy")
    Else
        NgayCT = Application.WorksheetFunction.Text(XDAY & "/" & XMONTH & "/" & XYEAR, "dd/mm/yyyy")
    End If
End Function



